{% extends 'layout.njk' %}

{% block content %}
  <h1>TTFB Test</h1>
  <p>
    <img src="/test/img/square.png">
  </p>

  <p>Text below the image</p>

  <p><a id="navigate-away" href="https://example.com">Navigate away</a></p>

  <script type="module">
    import {getTTFB} from '{{ modulePath }}';

    (async function() {
      {% if awaitLoad %}
        await new Promise((resolve) => addEventListener('load', resolve));
      {% endif %}

      getTTFB((ttfb) => {
        // Log for easier manual testing.
        console.log(ttfb);

        // Test sending the metric to an analytics endpoint.
        navigator.sendBeacon(`/collect`, JSON.stringify(ttfb));
      }, self.__reportAllChanges);
    }());
  </script>
{% endblock %}
